{
  "kind": "collectionType",
  "collectionName": "careers",
  "info": {
    "singularName": "career",
    "pluralName": "careers",
    "displayName": "Career",
    "description": "Job postings and career opportunities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "job_title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "location": {
      "type": "string"
    },
    "employment_type": {
      "type": "enumeration",
      "enum": ["full-time", "part-time", "contract"],
      "default": "full-time"
    },
    "deadline": {
      "type": "date"
    },
    "status": {
      "type": "enumeration",
      "enum": ["open", "closed"],
      "default": "open"
    },
    "requirements": {
      "type": "richtext"
    },
    "responsibilities": {
      "type": "richtext"
    }
  }
}
