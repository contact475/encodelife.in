{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Events and workshops"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "event_date": {
      "type": "datetime",
      "required": true
    },
    "location": {
      "type": "string"
    },
    "registration_link": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "status": {
      "type": "enumeration",
      "enum": ["upcoming", "ongoing", "completed"],
      "default": "upcoming"
    }
  }
}
