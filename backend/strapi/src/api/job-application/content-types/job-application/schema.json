{
  "kind": "collectionType",
  "collectionName": "job_applications",
  "info": {
    "singularName": "job-application",
    "pluralName": "job-applications",
    "displayName": "Job Application",
    "description": "Job applications submitted by candidates"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true,
      "maxLength": 20
    },
    "location": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "jobId": {
      "type": "string",
      "required": true
    },
    "jobTitle": {
      "type": "string",
      "required": true
    },
    "experience": {
      "type": "enumeration",
      "enum": ["Entry-Level (0-1 years)", "Mid-Level (2-4 years)", "Senior (5+ years)"],
      "required": true
    },
    "currentRole": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "skills": {
      "type": "text"
    },
    "resumeLink": {
      "type": "string",
      "required": true
    },
    "portfolioLink": {
      "type": "string"
    },
    "coverLetter": {
      "type": "text"
    },
    "applicationStatus": {
      "type": "enumeration",
      "enum": [
        "submitted",
        "under_review",
        "interview_scheduled",
        "interview_completed",
        "selected",
        "rejected",
        "withdrawn"
      ],
      "default": "submitted"
    },
    "submittedAt": {
      "type": "datetime",
      "default": "now"
    },
    "expectedSalary": {
      "type": "string"
    },
    "noticePeriod": {
      "type": "enumeration",
      "enum": ["Immediate", "15 days", "1 month", "2 months", "3 months"]
    },
    "linkedinProfile": {
      "type": "string"
    },
    "source": {
      "type": "string",
      "default": "website"
    },
    "referral": {
      "type": "string"
    },
    "hrNotes": {
      "type": "text"
    },
    "interviewDate": {
      "type": "datetime"
    },
    "interviewFeedback": {
      "type": "text"
    },
    "salaryOffered": {
      "type": "string"
    },
    "joiningDate": {
      "type": "date"
    }
  }
}